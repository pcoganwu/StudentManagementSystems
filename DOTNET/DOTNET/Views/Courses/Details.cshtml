@model Course

@{
    ViewData["Title"] = "Course Details";

    var enrollments = Model.Enrollments ?? new List<Enrollment>();
    var enrollmentCount = enrollments.Count;
    string instructor = string.IsNullOrWhiteSpace(Model.Instructor) ? "TBD" : Model.Instructor!;
}


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Course Details</h4>
                    <span class="badge bg-light text-dark">@enrollmentCount enrolled</span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="list-group list-group-flush">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Title</span>
                                    <span class="fw-semibold">@Model.Title</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Instructor</span>
                                    <span class="fw-semibold">@instructor</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Credit</span>
                                    <span class="fw-semibold">@Model.Credit</span>
                                </div>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-muted">Course Id</span>
                                    <span class="fw-semibold">@Model.Id</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center">
                            <div class="w-100">
                                <div class="alert alert-info mb-0">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-people-fill me-2"></i>
                                        <div>
                                            <div class="fw-semibold">Enrollment Overview</div>
                                            <small>@enrollmentCount student@(enrollmentCount == 1 ? string.Empty : "s") enrolled in this course.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Enrollments</h5>

                    @if (!enrollments.Any())
                    {
                        <div class="alert alert-secondary">No students are enrolled in this course yet.</div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:72px">Photo</th>
                                        <th>Student</th>
                                        <th>Gender</th>
                                        <th>Enrollment Date</th>
                                        <th>Grade</th>
                                        <th style="width:180px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var e in enrollments)
                                    {

                                       @*  var s = e.Student;
                                        var fullName = s is null ? "Unknown" : $"{s.FirstName} {s.Initials} {s.LastName}".Replace("  ", " ").Trim();
                                        var photoPath = "~/images/" + (s?.PhotoPath ?? "noimage.jpg");
                                        <tr>
                                            <td>
                                                <img asp-append-version="true" src="@photoPath" class="rounded" alt="@fullName" width="56" height="56" style="object-fit:cover;" />
                                            </td>
                                            <td class="fw-semibold">@fullName</td>
                                            <td>@(s?.Gender.ToString() ?? "-")</td>
                                            <td>@(s?.EnrollmentDate?.ToString("yyyy/MM/dd") ?? "-")</td>
                                            <td>@e.Grade.ToString()</td>
                                            <td>
                                                @if (s != null)
                                                {
                                                    <a asp-controller="Student" asp-action="GetStudentDetails" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary m-1">View Student</a>
                                                }
                                                <a asp-controller="Courses" asp-action="Index" class="btn btn-sm btn-outline-secondary">Back to Courses</a>
                                            </td>
                                        </tr> *@
                                        @* @await Html.PartialAsync("_CourseDetailsPartial", e) *@
                                        <partial name="_CourseDetailsPartial" model="e" />
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>