<table class="table table-borderless table-striped">
    <thead class="bg-primary">
        <tr>
            <th>ID</th>
            <th>Photo</th>
            <th>First Name</th>
            <th>Initials</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Enrollment Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student student in Model)
        {
            var photoPath = "~/images/" + (student.PhotoPath ?? "noimage.jpg");

            <tr>
                <td>@student.Id</td>
                <td><img asp-append-version="true" src="@photoPath" width="60" height="60" class="img-thumbnail" /></td>
                <td>@student.FirstName</td>
                <td>@student.Initials</td>
                <td>@student.LastName</td>
                <td>@student.Gender</td>
                <td>@student.EnrollmentDate</td>
                <td>
                   @*  <a href="/student/getStudentDetails/@student.Id">View</a> *@
                    <a asp-controller="Student" asp-action="GetStudentDetails" asp-route-id="@student.Id">View</a>
                    <a asp-controller="Student" asp-action="UpdateStudent" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-link text-danger"
                       data-bs-toggle="modal"
                       data-bs-target="#deleteModal-@student.Id">
                       Delete
                   </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (Student student in Model)
{
    var modalId = "deleteModal-" + student.Id;

    <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-action="DeleteStudent" asp-controller="Student" asp-route-id="@student.Id">
                    <div class="modal-body">
                        <span class="text-danger">
                            Are you sure you want to delete @student.FirstName @student.LastName?
                        </span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}


