            <th>Initials</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Enrollment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Student student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.Initials</td>
                <td>@student.LastName</td>
                <td>@student.Gender</td>
                <td>@student.EnrollmentDate</td>
