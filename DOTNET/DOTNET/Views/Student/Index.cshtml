<table class="table table-borderless table-striped">
    <thead class="bg-primary">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Initials</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Enrollment Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student student in Model)
        {
            var photoPath = "/images/" + student.PhotoPath;

            <tr>
                <td>@student.Id</td>
                <td><img src="@photoPath" width="60" height="60" class="img-thumbnail" /></td>
                <td>@student.FirstName</td>
                <td>@student.Initials</td>
                <td>@student.LastName</td>
                <td>@student.Gender</td>
                <td>@student.EnrollmentDate</td>
                <td>
                   @*  <a href="/student/getStudentDetails/@student.Id">View</a> *@
                    <a asp-controller="Student" asp-action="GetStudentDetails" asp-route-id="@student.Id">View</a>
                    <a href="#">Edit</a>
                    <a href="#">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

