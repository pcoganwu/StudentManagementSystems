@model StudentViewModel

@{
    ViewData["Title"] = "Create Student";
}

<form method="post" asp-controller="Student" asp-action="CreateStudent">
    <div class="row mb-3">
        <label asp-for="@Model.Student.FirstName" class="col-form-label col-md-2" ></label>
        <div class="col-md-6">
            <input asp-for="@Model.Student.FirstName" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Student.Initials" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="@Model.Student.Initials" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Student.LastName" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="@Model.Student.LastName" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Student.Gender" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <select asp-for="@Model.Student.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control form-select">

            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Student.EnrollmentDate" class="col-form-label col-md-2"></label>
        <div class="col-md-6">
            <input asp-for="@Model.Student.EnrollmentDate" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <button type="submit" class="btn btn-primary col-md-2 me-2">Create</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary col-md-2">Cancel</a>
    </div>
</form>
